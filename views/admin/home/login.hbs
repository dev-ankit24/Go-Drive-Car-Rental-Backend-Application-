{{>header}}
<title>Go Drive - Car Rental | Login Section</title>
{{>navbar}}
{{>hero}}
<div class="container-fluid my-3">
  <div class="row">
    <div class="col-md-10  col-sm-8 col-10 m-auto">
      <h5 class="bg-primary text-center text-light p-2 mb-2"> Admin Login </h5>
      <form action="/admin/login" method="post">
        <div class="mb-3">
          <input type="text" name="username" placeholder=" Enter UserName or Email"
            class="form-control border-2 border-primary">
        </div>
        <div class="mb-3">
          <input type="password" name="password" placeholder=" Enter Password"
            class="form-control border-2 border-primary">
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary w-100"> Login</button>
        </div>
      </form>
    </div>
  </div>
</div>
