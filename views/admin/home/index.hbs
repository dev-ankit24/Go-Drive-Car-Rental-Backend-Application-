{{>header}}
<title>Go Drive - Car Rental | Admin Section</title>
{{>navbar}}
{{>hero}}
<div class="container-fluid my-3">
  <div class="row">
    <div class="col-md-3">
    {{>sidebar}}
  </div>
  <div class="col-md-9">
     <div class="row">
      <div class="col-md-6">
        {{#if data.pic}}
        <img src={{data.pic}} height="250px" width="220px" class="rounded"  alt="admin-image">
        {{else}}
        <img src="/img/team-2.jpg" height="250px" width="220px" class="rounded"  alt="admin-image">
        {{/if}}
      </div>
      <div class="col-md-6">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>Name</th>
              <th>{{data.name}}</th>
            </tr>
            <tr>
              <th>User Name</th>
              <th>{{data.username}}</th>
            </tr>
            <tr>
              <th>Email</th>
              <th>{{data.email}}</th>
            </tr>
            <tr>
              <th>Phone</th>
              <th>{{data.phone}}</th>
            </tr>
            <tr>
              <th>Role </th>
              <td>{{data.role}}</td>
            </tr>
            
            <tr>
              <th colspan="2">
                <a href="/admin/update-profile" class="btn btn-primary w-100">Update Profile</a>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
  </div>
</div>
  </div>
{{>footer}}