{{>header}}
<title>Go Drive - Car Rental | Admin Testimonials Section</title>
{{>navbar}}
{{>hero}}
<div class="container-fluid my-3">
  <div class="row">
    <div class="col-md-3">
      {{>sidebar}}
    </div>
    <div class="col-md-9">
      <h5 class="bg-primary text-center text-light p-2">User Query </h5>
      <div class="table-responsive">
        <table class="table table-bordered">
          <tr>
            <td>Id</td>
            <td>{{data._id}}</td>
          </tr>
          <tr>
            <td>Name</td>
            <td>{{data.name}}</td>
          </tr>
          <tr>
            <td>Email</td>
            <td>{{data.email}}</td>
          </tr>
          <tr>
            <td>Phone</td>
            <td>{{data.phone}}</td>
          </tr>
          <tr>
            <td>Subject</td>
            <td>{{data.subject}}</td>
          </tr>
          <tr>
            <td>Message</td>
            <td>{{data.message}}</td>
          </tr>
          <tr>
            <td>Active</td>
            <td>{{#if data.active}} Yes {{else}}No {{/if}}</td>
          </tr>
          <tr >
            {{#if data.active}}
            <td colspan="2"><a class="btn btn-primary w-100" href="/admin/contact/edit/{{data._id}}">Query Done</a></td>
            {{else}}
            <td  colspan="2"><a class="btn btn-danger w-100" href="/admin/contact/delete/{{data._id}}">Delete</a></td>
           {{/if}}
          </tr>
        </table>

        </div>
      </div>

    </div>
  </div>
</div>
</div>
</div>
{{>footer}}